<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <div class="card card-block col-md-8" style="margin-top:8%;margin-left:20%;">

    <h2>Change my password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <b><%= f.label :password, "Nouveau mot de passe" %></b><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> minimum characters)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control col-md-3" %>
      </div>

      <div class="form-group">
        <b><%= f.label :password_confirmation, "Confirmer mon mot de passe" %></b><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control col-md-3" %>
      </div>

      <div class="actions">
        <%= f.submit "Change my password", class:"btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</main>